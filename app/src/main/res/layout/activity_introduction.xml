<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context="com.example.akash.demoapplication.ui.activity.IntroductionActivity">

    <TextView
        android:id="@+id/txtHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingBottom="50dp"
        android:paddingTop="50dp"
        android:text="@string/convert_the_image"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtHeading"
        android:layout_centerHorizontal="true"
        android:background="@drawable/boder_spinner"
        android:elevation="1dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <Spinner
            android:paddingRight="10dp"
            android:id="@+id/spnCategory"
            android:layout_width="170dp"
            android:layout_height="wrap_content"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_list_doccument"
            android:layout_marginBottom="5dp"
            android:text="Generate" />

        <Button
            android:id="@+id/btn_list_doccument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View previous doccumnets" />
    </LinearLayout>


</RelativeLayout>
